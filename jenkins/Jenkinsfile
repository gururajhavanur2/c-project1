pipeline {
    agent any
    
    parameters {
     string defaultValue: 'main', name: 'branch', trim: true
    }
    
    environment {
        BRANCH_NAME = $branch
    }

    
    stages{
        stage('BUILD') {
            
            agent { label 'master' }
            
            steps{
                 sh '''
                    sleep 5
                    echo "This is a BUILD stage $BRANCH_NAME "
                '''
            }
        }

        stage('TEST') {
            
            agent { label 'slave1' }
            
            steps {
                sh '''
                    sleep 10
                    echo "This is a TEST stage $BRANCH_NAME "
                '''
            }
        }

        stage('DEPLOY') {
            
            agent { label 'slave2' }

            steps{
                sh '''
                    sleep 5
                    echo "This is a DEPLOY stage $BRANCH_NAME"
    
                '''
            }
        }
    }
}
